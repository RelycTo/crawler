{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:G}][{Level:u3}][{ProcessId}][{ThreadId}][{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "RollingFile",
              "Args": {
                "pathFormat": "./.logs/log-{Date}.txt",
                "retainedFileCountLimit": 5
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  }
}